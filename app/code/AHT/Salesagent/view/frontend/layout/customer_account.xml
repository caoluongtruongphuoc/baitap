<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" label="Customer My Account (All Pages)" design_abstraction="custom">
    <body>
        <referenceContainer name="sidebar.main">
            <referenceBlock name="sidebar.main.account_nav">
                <referenceBlock name="customer_account_navigation">
                    <block class="Magento\Customer\Block\Account\SortLinkInterface" name="list-product-assigned">
                        <arguments>
                            <argument name="label" xsi:type="string" translate="true">List product assigned</argument>
                            <argument name="path" xsi:type="string">productassigned/productassigned/</argument>
                            <argument name="sortOrder" xsi:type="number">160</argument>
                        </arguments>
                    </block>
                </referenceBlock>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
